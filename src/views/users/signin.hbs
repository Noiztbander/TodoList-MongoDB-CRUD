<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h1>Account Login</h1>
      </div>
      <img
        src="/images/logo_3.png"
        alt="logo"
        class="logoLogin rounded-circle mx-auto d-block m-4"
      />
      <div class="card-body">
        <form action="/users/signin" class="d-flex w-100 gap-3 flex-column" method="POST">
          <div class="form-group">
            <input
              type="email"
              class="form-control"
              name="email"
              autofocus
              placeholder="User email"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              class="form-control"
              name="password"
              autofocus
              placeholder="Password"
            />
          </div>
          <div class="form-group d-grid gap-2 col-6 mx-auto">
            <button type="submit" class="btn btn-primary btn-block h-100">
              Sign Up
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>