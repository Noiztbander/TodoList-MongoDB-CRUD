<section class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>New Note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="POST">
        <div class="form-group mb-2">
          <input
            class="form-control"
            autofocus
            placeholder="Title"
            type="text"
            name="title"
          />
        </div>
        <div class="form-group mb-2">
          <textarea
            name="description"
            class="form-control"
            placeholder="Description"
          ></textarea>
        </div>
        <div class="form-group">
          <button
            class="btn btn-light btn-block border border-dark"
            type="submit"
          > Save</button>
        </div>
      </form>
    </div>
  </div>
</section>