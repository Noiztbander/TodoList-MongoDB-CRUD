
<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>
        Edit note
      </h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit-note/{{id}}?_method=PUT" method="POST">
      <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input
            class="form-control"
            value="{{title}}"
            placeholder="title"
            name="title"
            type="text"
          />
        </div>
        <div class="form-group">
          <textarea
            class="form-control"
            name="description"
          >{{description}}</textarea>
        </div>
        <div class="form-group">
          <button
            type="submit"
            class="btn btn-light btn-block border border-dark"
          >
            save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>