<div class="col-md-4">
  <div class="card">
    <div class="card-header">
      <h3>
        Edit note
      </h3>
    </div>
    <div class="card-body">
      <form action="" method="">
        <div class="form-group">
          <input
            class="form-control"
            value="{{foundNote.title}}"
            placeholder="title"
            name="title"
            type="text"
          />
        </div>
        <div class="form-group">
          <textarea
            class="form-control"
            name="description"
          >{{foundNote}}</textarea>
        </div>
        <div class="form-group">
          <button
            type="submit"
            class="btn btn-light btn-block border border-dark"
          >
            save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>